<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="DemoQA Test Automation Suite" verbose="1">
    <test name="Smoke Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.demoqa.tests.FormTests"/>
            <class name="com.demoqa.tests.InteractionTests"/>
            <class name="com.demoqa.tests.DataDrivenStudentFormTests"/>
        </classes>
    </test>
    
    <test name="Regression Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.demoqa.tests.FormTests"/>
            <class name="com.demoqa.tests.InteractionTests"/>
            <class name="com.demoqa.tests.DataDrivenStudentFormTests"/>
        </classes>
    </test>
    
    <test name="All Tests">
        <classes>
            <class name="com.demoqa.tests.FormTests"/>
            <class name="com.demoqa.tests.InteractionTests"/>
            <class name="com.demoqa.tests.DataDrivenStudentFormTests"/>
        </classes>
    </test>
</suite>